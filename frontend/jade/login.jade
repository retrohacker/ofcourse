div.ofcourse-login-bg
  div.ofcourse-login
    !{JADE['xl-logo']()}
    div.ofcourse-bar-break
    !{JADE['fblogin']()}

fieldset.pure-group.ofcourse-hidden
  - each item in locals
    input.pure-input-1(id='#{item.id}' name='#{item.id}' type='text' placeholder='#{item.desc}')
    br
    button(type='submit' class=['pure-button pure-input-1 pure-button-primary'] onclick="workspace.navigate('home',{trigger:true})") Login
    h2 -OR-
    button(type='button' class='pure-button pure-input-1 pure-button-primary' onclick="workspace.navigate('register',{trigger:true})") Register
